<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_test_iv_reclcy"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/test_iv_reclcy_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/icon_pull_2_refresh_light"/>

        <ImageView
            android:id="@+id/test_iv_reclcy_iv_2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/icon_pull_2_refresh_light"/>

        <ImageView
            android:id="@+id/test_iv_reclcy_iv_3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/icon_pull_2_refresh_light"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/test_iv_reclcy_gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gone_3"/>

        <Button
            android:id="@+id/test_iv_reclcy_invisiable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="invisiable_2"/>

        <Button
            android:id="@+id/test_iv_reclcy_reclcy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="reclcy_1"/>

        <Button
            android:id="@+id/test_iv_reclcy_reclcy_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="reclcy_reset"/>
    </LinearLayout>
</RelativeLayout>