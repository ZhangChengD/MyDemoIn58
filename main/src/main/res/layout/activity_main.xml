<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zc.mydemoin58.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:background="@color/transparent"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DO SOMETHING FOR US"/>

            <Button
                android:id="@+id/gotoSynch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="同步"
                />

            <Button
                android:id="@+id/gotoStatusBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="沉浸式"
                />

            <Button
                android:id="@+id/gotoSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="系统设置"
                />

            <Button
                android:id="@+id/gotoDesign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="设计模式"
                />

            <Button
                android:id="@+id/gotoFloating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Activity栈顶"
                />

            <Button
                android:id="@+id/gotoNest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="嵌套布局"
                />

            <Button
                android:id="@+id/gotoViewPager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="viewpager"
                />

            <Button
                android:id="@+id/gotoRecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="RecyclerView"
                />

            <Button
                android:id="@+id/gotoHorRecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="横向的RecyclerView"
                />

            <Button
                android:id="@+id/gotoBitmap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="bitmap的尝试"
                />

            <Button
                android:id="@+id/gotoFlow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Flow流布局"
                />

            <Button
                android:id="@+id/gotoShake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="View的抖动"
                />

            <Button
                android:id="@+id/gotoTabTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Tab吸顶"
                />

            <Button
                android:id="@+id/gotoTabTop2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Tab吸顶2"
                />

            <Button
                android:id="@+id/gotoLV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="LV的滚事件的监听"
                />

            <Button
                android:id="@+id/gotoMoveView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="CoordinatorLayout简单示范"
                />

            <Button
                android:id="@+id/gotoCacheFileOpe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="一些缓存文件格式"
                />

            <Button
                android:id="@+id/gotoAnimation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="一些简单动画"
                />

            <Button
                android:id="@+id/gotoExpandLV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="楼中楼"
                />

            <Button
                android:id="@+id/gotoMyView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="自定义View的构造方法"
                />

            <Button
                android:id="@+id/gotoTestLooper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Looper"
                />

            <Button
                android:id="@+id/gotoConstraintLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="ConstraintLayout Demo"
                />

            <Button
                android:id="@+id/gotoTestDB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="DB Demo"
                />

            <Button
                android:id="@+id/gotoTestRXJava"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="RXJava Demo"
                />

            <Button
                android:id="@+id/gotoTestIVReclcy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="TO Test ImageView Reclcy"
                />
            <Button
                android:id="@+id/gotoDemoImageLeak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="图片leak的示例"
                />
            <Button
                android:id="@+id/gotoModuleMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="ModuleMainActivity"
                />
            <Button
                android:id="@+id/gotoGlideMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="GlideMainActivity"
                />
            <Button
                android:id="@+id/gotoClassLoaderTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="ClassLoaderTestActivtiy"
                />
            <Button
                android:id="@+id/gotoTestActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="activity生命周期"
                />

            <Button
                android:id="@+id/gotoMultiView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="复用的布局文件" />

            <Button
                android:id="@+id/gotoSlidingMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="gotoSlidingMenu" />
            <Button
                android:id="@+id/gotoSQlTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="数据库操作" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
