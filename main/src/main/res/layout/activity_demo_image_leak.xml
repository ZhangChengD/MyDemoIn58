<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.zc.demoImage.DemoImageLeakActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/demo_image_invisiable_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="invisiable"/>

        <Button
            android:id="@+id/demo_image_gone_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gone"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/demo_image_invisiable"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/icon_ball_1"/>

    <ImageView
        android:id="@+id/demo_image_gone"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/icon_ball_2"/>
</LinearLayout>
